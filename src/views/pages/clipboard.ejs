<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head'); %>

<body class="mb-3">

    <%- include('../partials/navbar'); %>

    <div class="container-fluid">
        <div class="form-group">
            <textarea class="form-control" required id="content" name="content" rows="20" placeholder="Paste in anything you want" autofocus><%= content %></textarea>
        </div>
        <div class="btn-toolbar">
            <div class="btn-group">
                <button type="submit" class="btn btn-success" data-clipboard-action="copy" data-clipboard-target="#content">Copy</button>
            </div>
            <div class="btn-group ml-3 mt-2">
                Expire in <%= expiredAt %>
            </div>
        </div>
    </div>

    <%- include('../partials/about'); %>

    <%- include('../partials/footer'); %>

</body>

</html>
