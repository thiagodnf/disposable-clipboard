<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head'); %>

    <body class="mb-3">

        <%- include('../partials/navbar'); %>

        <div class="container-fluid">
            <form id="form-create" method="POST" action="clipboard/create">
                <input type="hidden" name="_csrf" value="<%= locals.csrftoken %>">
                <div class="form-group">
                    <textarea class="form-control" required name="content" rows="20" placeholder="Paste in anything you want" autofocus></textarea>
                </div>
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-success">Create</button>
                    </div>
                    <div class="btn-group ml-2">
                        <select class="form-control" name="expirationTime" required>
                            <% for(let key in expirationTimes) { %>
                                <option value="<%= key %>" <%= expirationTimes[key].selected %>><%= expirationTimes[key].label %></option>
                            <% }; %>
                        </select>
                    </div>
                </div>
            </form>
        </div>

        <%- include('../partials/about'); %>

        <%- include('../partials/footer'); %>

    </body>

</html>
